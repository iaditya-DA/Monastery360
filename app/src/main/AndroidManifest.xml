<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Internet Permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Location Permissions -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.Monastery360">

        <!-- ✅ Google Maps API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyA4o9p91MHBNWbK-G-Hco_eOUDUBpaIl2Q" />

        <activity
            android:name=".LanguageSelectionActivity"
            android:exported="true"
            android:theme="@style/Theme.Monastery360"
            android:configChanges="locale|layoutDirection">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Other Activities -->
        <activity
            android:name=".StartActivity"
            android:exported="false"
            android:theme="@style/Theme.Monastery360"
            android:windowSoftInputMode="adjustResize"
            android:configChanges="locale|layoutDirection" />

        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:configChanges="locale|layoutDirection" />

        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.Monastery360"
            android:configChanges="locale|layoutDirection" />

        <activity
            android:name=".AllMonasteriesActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Monastery360"
            android:configChanges="locale|layoutDirection" />

        <activity
            android:name=".MonasteryDetailActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.Monastery360"
            android:configChanges="locale|layoutDirection" />

        <!-- ✅ NEW: Full Screen Maps Activity -->
        <activity
            android:name=".MonasteryMapsActivity"
            android:exported="false"
            android:parentActivityName=".MonasteryDetailActivity"
            android:theme="@style/Theme.Monastery360"
            android:configChanges="locale|layoutDirection" />

    </application>

</manifest>