<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7DDC5">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNav">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/spacing_large">

            <LinearLayout
                android:id="@+id/topBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_bar_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/spacing_normal"
                android:paddingEnd="@dimen/spacing_normal"
                android:paddingTop="@dimen/spacing_normal"
                android:paddingBottom="@dimen/spacing_normal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="@dimen/profile_image_size"
                    android:layout_height="@dimen/profile_image_size"
                    android:background="@drawable/circle_background"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/profile_image"
                    android:src="@drawable/profile" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_small"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/greeting_name"
                        android:textColor="#000000"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/good_morning"
                        android:textColor="#000000"
                        android:textSize="@dimen/text_medium"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/notificationIcon"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:layout_marginEnd="@dimen/spacing_small"
                    android:contentDescription="@string/notifications"
                    android:src="@drawable/notifications" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/searchContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/spacing_normal"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_normal"
                app:layout_constraintTop_toBottomOf="@id/topBar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/search_bar_height"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/corner_radius_large"
                    app:cardElevation="@dimen/card_elevation_small"
                    android:layout_marginEnd="@dimen/spacing_small">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/spacing_normal"
                        android:paddingEnd="@dimen/spacing_normal">

                        <ImageView
                            android:layout_width="@dimen/icon_size_small"
                            android:layout_height="@dimen/icon_size_small"
                            android:contentDescription="@string/search"
                            android:src="@drawable/search"/>

                        <EditText
                            android:id="@+id/searchEditText"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/spacing_small"
                            android:hint="@string/search_hint"
                            android:importantForAutofill="no"
                            android:inputType="text"
                            android:textColorHint="#000000"
                            android:textSize="@dimen/text_small"
                            android:background="@android:color/transparent"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/search_bar_height"
                    android:layout_height="@dimen/search_bar_height"
                    app:cardCornerRadius="@dimen/corner_radius_normal"
                    app:cardBackgroundColor="#5B4ECC"
                    app:cardElevation="@dimen/card_elevation_small">

                    <ImageView
                        android:id="@+id/filterIcon"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:src="@drawable/filter"
                        android:layout_gravity="center"
                        android:contentDescription="@string/filter"
                        app:tint="#FFFFFF"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/popularHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/spacing_normal"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_large"
                app:layout_constraintTop_toBottomOf="@id/searchContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/popular"
                    android:textSize="@dimen/text_large"
                    android:textColor="#000000"
                    android:textStyle="bold"/>


            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/popularScrollView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal"
                android:paddingStart="@dimen/spacing_normal"
                android:paddingEnd="@dimen/spacing_normal"
                android:scrollbars="none"
                app:layout_constraintTop_toBottomOf="@id/popularHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="@dimen/spacing_normal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/popular_item_size"
                            android:layout_height="@dimen/popular_item_size"
                            app:cardCornerRadius="@dimen/popular_item_radius"
                            app:cardElevation="@dimen/card_elevation_small">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/bg2"
                                android:contentDescription="@string/rumtek"
                                android:scaleType="centerCrop"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rumtek"
                            android:textSize="@dimen/text_tiny"
                            android:textColor="#000000"
                            android:layout_marginTop="@dimen/spacing_tiny"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="@dimen/spacing_normal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/popular_item_size"
                            android:layout_height="@dimen/popular_item_size"
                            app:cardCornerRadius="@dimen/popular_item_radius"
                            app:cardElevation="@dimen/card_elevation_small">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/bg3"
                                android:contentDescription="@string/pemayangtse"
                                android:scaleType="centerCrop"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pemayangtse"
                            android:textSize="@dimen/text_tiny"
                            android:textColor="#000000"
                            android:layout_marginTop="@dimen/spacing_tiny"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="@dimen/spacing_normal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/popular_item_size"
                            android:layout_height="@dimen/popular_item_size"
                            app:cardCornerRadius="@dimen/popular_item_radius"
                            app:cardElevation="@dimen/card_elevation_small">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/bg1"
                                android:contentDescription="@string/tashiding"
                                android:scaleType="centerCrop"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tashiding"
                            android:textSize="@dimen/text_tiny"
                            android:textColor="#000000"
                            android:layout_marginTop="@dimen/spacing_tiny"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="@dimen/spacing_normal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/popular_item_size"
                            android:layout_height="@dimen/popular_item_size"
                            app:cardCornerRadius="@dimen/popular_item_radius"
                            app:cardElevation="@dimen/card_elevation_small">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/bg4"
                                android:contentDescription="@string/enchey"
                                android:scaleType="centerCrop"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/enchey"
                            android:textSize="@dimen/text_tiny"
                            android:textColor="#000000"
                            android:layout_marginTop="@dimen/spacing_tiny"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/popular_item_size"
                            android:layout_height="@dimen/popular_item_size"
                            app:cardCornerRadius="@dimen/popular_item_radius"
                            app:cardElevation="@dimen/card_elevation_small">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/bg1"
                                android:contentDescription="@string/dubdi"
                                android:scaleType="centerCrop"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dubdi"
                            android:textSize="@dimen/text_tiny"
                            android:textColor="#000000"
                            android:layout_marginTop="@dimen/spacing_tiny"/>
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:id="@+id/recommendedHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/spacing_normal"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_large"
                app:layout_constraintTop_toBottomOf="@id/popularScrollView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/recommended"
                    android:textSize="@dimen/text_large"
                    android:textColor="#000000"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/showAllRecommended"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/show_all"
                    android:textSize="@dimen/text_small"
                    android:textColor="#000000"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerRecommended"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/recommendedHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- âœ… What We Offer Section -->
            <LinearLayout
                android:id="@+id/whatWeOfferHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/spacing_normal"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:layout_marginTop="24dp"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@id/recyclerRecommended"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">



                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/what_we_offer"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <!-- Grid layout for 4 cards -->
            <GridLayout
                android:id="@+id/gridWhatWeOffer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_normal"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_normal"
                android:columnCount="2"
                android:rowCount="2"
                app:layout_constraintTop_toBottomOf="@id/whatWeOfferHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Card 1: Virtual Tours -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_vr"
                            android:background="@drawable/circle_icon_background"
                            android:padding="12dp"
                            android:contentDescription="@string/virtual_tours"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/virtual_tours"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/virtual_tours_desc"
                            android:textSize="11sp"
                            android:textColor="#666666"
                            android:gravity="center"
                            android:layout_marginTop="6dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Card 2: Local Guides -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_guide"
                            android:background="@drawable/circle_icon_background"
                            android:padding="12dp"
                            android:contentDescription="@string/local_guides"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/local_guides"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/local_guides_desc"
                            android:textSize="11sp"
                            android:textColor="#666666"
                            android:gravity="center"
                            android:layout_marginTop="6dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Card 3: Travel Tips -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_tips"
                            android:background="@drawable/circle_icon_background"
                            android:padding="12dp"
                            android:contentDescription="@string/travel_tips"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/travel_tips"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/travel_tips_desc"
                            android:textSize="11sp"
                            android:textColor="#666666"
                            android:gravity="center"
                            android:layout_marginTop="6dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Card 4: Weather Updates -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_weather"
                            android:background="@drawable/circle_icon_background"
                            android:padding="12dp"
                            android:contentDescription="@string/weather_updates"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/weather_updates"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/weather_updates_desc"
                            android:textSize="11sp"
                            android:textColor="#666666"
                            android:gravity="center"
                            android:layout_marginTop="6dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </GridLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>




    <androidx.cardview.widget.CardView
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        app:cardElevation="14dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="0dp" app:cardPreventCornerOverlap="false"     app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="1.0">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bottom_nav_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <LinearLayout
                    android:id="@+id/navHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="18dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:background="@drawable/nav_item_active_background" >

                    <ImageView
                        android:id="@+id/navHomeIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/home"
                        app:tint="#5B4ECC"
                        android:contentDescription="@string/home" />

                    <TextView
                        android:id="@+id/navHomeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home"
                        android:textColor="#000000"
                        android:textSize="10sp"
                        android:layout_marginStart="4dp"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/navFav"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp">

                    <ImageView
                        android:id="@+id/navFavIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/favorite"
                        app:tint="#666666"
                        android:contentDescription="@string/favorite" />

                    <TextView
                        android:id="@+id/navFavText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/favorite"
                        android:textColor="#000000"
                        android:textSize="10sp"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/navPlan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp">

                    <ImageView
                        android:id="@+id/navPlanIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/planning"
                        app:tint="#666666"
                        android:contentDescription="@string/planning" />

                    <TextView
                        android:id="@+id/navPlanText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/planning"
                        android:textColor="#000000"
                        android:textSize="10sp"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/navProfile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp">

                    <ImageView
                        android:id="@+id/navProfileIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/profile"
                        app:tint="#666666"
                        android:contentDescription="@string/profile" />

                    <TextView
                        android:id="@+id/navProfileText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile"
                        android:textColor="#000000"
                        android:textSize="10sp"
                        android:visibility="gone" />
                </LinearLayout>

