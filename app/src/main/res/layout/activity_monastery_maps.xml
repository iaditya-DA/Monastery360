<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    >





    <!-- Full Screen Map Container -->
    <FrameLayout
        android:id="@+id/mapContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Top Header with Back, Language & Location Buttons -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:layout_anchor="@id/mapContainer"
        app:layout_anchorGravity="top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:background="@android:color/white">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/btnBackMap"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back"
                android:padding="8dp"
                android:contentDescription="@string/back"
                android:scaleType="centerInside"
                android:background="@drawable/circle_white_background"
                android:clickable="true"
                android:focusable="true" />

            <!-- Title -->
            <TextView
                android:id="@+id/txtMapTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/monastery"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Language Button -->
            <ImageView
                android:id="@+id/btnLanguageMap"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_language"
                android:padding="8dp"
                android:contentDescription="@string/change_language"
                android:scaleType="centerInside"
                android:background="@drawable/circle_white_background"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginStart="8dp" />

            <!-- My Location Button -->
            <ImageView
                android:id="@+id/btnMyLocationMap"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_location_pinic_location_pin"
                android:padding="8dp"
                android:contentDescription="@string/my_location"
                android:scaleType="centerInside"
                android:background="@drawable/circle_white_background"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Bottom Combined Card - Audio Guide + Location Details -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Audio Guide Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#5B4ECC"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="-16dp"
                android:layout_marginEnd="-16dp"
                android:layout_marginTop="-16dp">

                <!-- Play Button -->
                <ImageView
                    android:id="@+id/btnPlayAudioMap"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_play_circle"
                    android:background="@drawable/circle_white_background"
                    android:padding="8dp"
                    app:tint="#5B4ECC"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="@string/play_audio" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/audio_guide"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtAudioDurationMap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_2_30_english"
                        android:textColor="#FFFFFF"
                        android:textSize="11sp"
                        android:alpha="0.8" />

                    <!-- SeekBar -->
                    <SeekBar
                        android:id="@+id/seekBarAudioMap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:progressTint="#FFFFFF"
                        android:thumbTint="#FFFFFF"
                        android:progressBackgroundTint="#80FFFFFF"
                        android:max="100"
                        android:progress="0" />

                    <!-- Time Display -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:id="@+id/txtCurrentTimeMap"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0:00"
                            android:textColor="#FFFFFF"
                            android:textSize="10sp"
                            android:alpha="0.7" />

                        <TextView
                            android:id="@+id/txtTotalTimeMap"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2:30"
                            android:textColor="#FFFFFF"
                            android:textSize="10sp"
                            android:alpha="0.7" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Location Details Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Location Icon -->
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_location_pinic_location_pin"
                    android:contentDescription="@string/location"
                    android:scaleType="centerInside" />

                <!-- Location Details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/location"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txtLocationDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tap_marker_to_view_details"
                        android:textColor="#000000"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />
                    <!-- In activity_monastery_maps.xml, add this TextView -->
                    <!-- You can place it below txtLocationDetail -->

                    <!-- FIXED: Distance TextView -->
                    <TextView
                        android:id="@+id/txtDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:drawableStart="@drawable/ic_distance"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:text="Calculating distance..."
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:visibility="gone"
                        tools:text="1.5 km away"
                        tools:visibility="visible" />


                </LinearLayout>

                <!-- Directions Button -->
                <Button
                    android:id="@+id/btnDirections"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/directions"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:background="@drawable/rounded_button_white"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>