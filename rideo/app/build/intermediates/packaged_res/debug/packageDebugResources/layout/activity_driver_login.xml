<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A1C3A"
    android:padding="24dp"
    tools:context=".DriverLoginActivity">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/back_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_arrow_right_black_24dp"
        android:contentDescription="Back"
        app:tint="@android:color/white"
        android:clickable="true"
        android:focusable="true"
        android:padding="4dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- White Card Container for Login Form -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/login_card_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="12dp"
        app:layout_constraintTop_toBottomOf="@id/back_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintVertical_bias="0.4">

        <!-- Inner Layout for Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Title -->
            <TextView
                android:id="@+id/login_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Driver Login"
                android:textColor="#0A1C3A"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/login_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter your driver credentials."
                android:textColor="#757575"
                android:textSize="16sp"
                android:layout_marginBottom="32dp" />

            <!-- Email/ID Input -->
            <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Driver Email / ID"
                android:textColorHint="#9E9E9E"
                android:textColor="#212121"
                android:background="@drawable/rounded_input_field_white"
                android:inputType="textEmailAddress"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:drawableStart="@drawable/rounded_input_field_white"
                android:drawablePadding="12dp"
                android:layout_marginBottom="16dp"/>

            <!-- Password Input -->
            <EditText
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Password"
                android:textColorHint="#9E9E9E"
                android:textColor="#212121"
                android:background="@drawable/rounded_input_field_white"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:drawableStart="@drawable/rounded_input_field_white"
                android:drawablePadding="12dp"
                android:layout_marginBottom="16dp"/>

            <!-- Forgot Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:textColor="#0A1C3A"
                android:textSize="14sp"
                android:layout_marginBottom="32dp"
                android:layout_gravity="end"
                android:clickable="true"
                android:focusable="true"/>

            <!-- Login Button -->
            <Button
                android:id="@+id/btn_login_driver"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="LOGIN"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:backgroundTint="#0A1C3A"
                app:cornerRadius="12dp"
                android:layout_marginBottom="8dp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
